<div class="container">
  <div class="row">

    <div class="col-xs-3">
      <div class="row">
        <h2>User info</h2>

        <div>
            <%= attachment_image_tag current_user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>

        <table class="table table-striped">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
        </table>
　　　　　<% if @user.id == current_user.id  %>
              <p>
                <%= link_to edit_user_path(current_user.id) do %>
                <button type="button" class="btn btn-default" aria-label="Center Align"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>編集</button>

                <% end %>
              </p>

               <% else %>
              <p>
                <%= link_to user_path(current_user.id) do %>
                <button type="button" class="btn btn-default" aria-label="Center Align"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>編集</button>

                <% end %>
              </p>
            <% end %>

        </div>

            <h2><span>New Book</span></h2>

                <%= form_for(@book, url: books_path) do |f| %>
                    <% if @book.errors.any? %>
                      <div id="error_explanation">
                        <h3><%= pluralize(@book.errors.count, "error") %> invalidated your post.</h3>
                        <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="form-group has-icon">
                        <h5>Title</h5>
                          <%= f.text_field :title, size: "36", class: "book_title" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12">
                        <h5>Opinion</h5>
                        <%= f.text_area :body, size: "35x2", class: "book_body" %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12">
                        <%= f.submit "Create Book", class: "btn btn-lg btn-primary btn-base-1 mt-20" %>
                      </div>
                    </div>
                <% end %>
        </div>


        <div class="col-xs-9">


        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, class: "user_image", :size => "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td>
                <%= user.name %>
              </td>

              <td>
                <%= link_to "Show", user_path(user.id), class: "user_#{user.id}"  %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </div>
    </div>
</div>