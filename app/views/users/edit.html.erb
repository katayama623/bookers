<div class="container">
  <div class="row">
      <h2>User info</h2>

          <%= form_for(@user) do |f| %>

                      <% if @user.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
                          <ul>
                          <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                          </ul>
                        </div>
                      <% end %>

                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group has-icon">
                            <label>Name</label>
                            <%= f.text_field :name, autofocus: true, class: "name" %>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                              <div>
                        <label>ProfileImage</label>
                        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                    </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <h5>Introduction</h5>
                            <%= f.text_area :introduction, autofocus: true, class: "introduction" %>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-2">
                          <%= f.submit "Update User", class: "btn-default btn-block  mt-20" %>
                        </div>
                      </div>

              <% end %>

    </div>
</div>