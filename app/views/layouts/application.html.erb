<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
      <span class="sr-only">メニュー</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div style="margin-left: 30px">
      <font size="6" style="color: white">Bookers</font>
    </div>
  </div>

  <div id="gnavi" class="collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li><%= link_to 'Home', user_path(current_user.id) %></li>
      <li><a href="/users">Users</a>
      <li><a href="/books">Books</a>
      <li><%= link_to "logout", destroy_user_session_path, method: :delete %></a>
      <% else %>
      <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
      <li><a href="/home/about"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> About</a></li>
      <li><%= link_to 'sign up', new_user_registration_path %></li>
      <li><%= link_to 'login', new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
    <%= yield %>
    <footer class="pull-right">
      <div style="margin-right: 50px;">CopyRight Infratop.inc</div>
    </footer>
  </body>
</html>
